<UserControl x:Class="DocumentFillerWindowApp.UserControls.Bets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentFillerWindowApp.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="{materialDesign:PackIcon Kind=ContentSave}" Margin="20, 0" Visibility="{Binding SaveChangesShowButton, UpdateSourceTrigger=PropertyChanged}" Click="Button_Click_1"/>
            <TextBox Grid.Column="1" Margin="0, 2"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                materialDesign:HintAssist.Hint="Поиск"
                FontSize="14"
                Padding="5, 0"/>
            <Button Grid.Column="2" Margin="10, 2" Click="Button_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Add" Margin="0, 0, 10, 0"/>
                    <TextBlock Text="Удалить"/>
                </StackPanel>
            </Button>
        </Grid>
        <DataGrid
            x:Name="MainGrid"
            AutoGenerateColumns="False"
            CanUserAddRows="True"
            ItemsSource="{Binding Bets}"
            SelectionMode="Extended"
            SelectionUnit="FullRow"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            VirtualizingPanel.IsVirtualizing="True"
            BeginningEdit="MainGrid_BeginningEdit"
            PreparingCellForEdit="MainGrid_PreparingCellForEdit"
            CellEditEnding="MainGrid_CellEditEnding"
            Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding BetAmount, UpdateSourceTrigger=PropertyChanged}" Header="Доля ставки"/>
                <DataGridTextColumn Binding="{Binding HoursAmount, UpdateSourceTrigger=PropertyChanged}" Header="Часы"/>
                <DataGridComboBoxColumn SelectedValueBinding="{Binding TeacherID, UpdateSourceTrigger=LostFocus}" SelectedValuePath="ID" DisplayMemberPath="FullName" Header="Преподаватель">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding DataContext.Teachers, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding DataContext.Teachers, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
                <DataGridComboBoxColumn SelectedValueBinding="{Binding DepartmentID, UpdateSourceTrigger=LostFocus}" SelectedValuePath="ID" DisplayMemberPath="Name" Header="Кафедра">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding DataContext.Departments, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding DataContext.Departments, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
                <DataGridCheckBoxColumn Binding="{Binding IsExcessive, UpdateSourceTrigger=PropertyChanged}" Header="Дополнительная"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>




