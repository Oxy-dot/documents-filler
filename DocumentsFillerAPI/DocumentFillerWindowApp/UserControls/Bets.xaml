<UserControl x:Class="DocumentFillerWindowApp.UserControls.Bets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentFillerWindowApp.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="{materialDesign:PackIcon Kind=ContentSave}" Margin="20, 0" Visibility="{Binding SaveChangesShowButton, UpdateSourceTrigger=PropertyChanged}" Click="Button_Click_1"/>
            <Button Grid.Column="2" Margin="10, 2" Click="Button_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Add" Margin="0, 0, 10, 0"/>
                    <TextBlock Text="Удалить"/>
                </StackPanel>
            </Button>
        </Grid>
        <DataGrid
            x:Name="MainGrid"
            AutoGenerateColumns="False"
            CanUserAddRows="True"
            ItemsSource="{Binding Bets}"
            SelectionMode="Extended"
            SelectionUnit="FullRow"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.CanContentScroll="False"
            VirtualizingPanel.IsVirtualizing="True"
            VirtualizingPanel.VirtualizationMode="Recycling"
            EnableRowVirtualization="True"
            EnableColumnVirtualization="True"
            HeadersVisibility="Column"
            GridLinesVisibility="None"
            RowHeaderWidth="0"
            AlternatingRowBackground="Transparent"
            BeginningEdit="MainGrid_BeginningEdit"
            PreparingCellForEdit="MainGrid_PreparingCellForEdit"
            CellEditEnding="MainGrid_CellEditEnding"
            Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Преподаватель">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TeacherFullName}" VerticalAlignment="Center" Margin="5,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox SelectedValue="{Binding TeacherID, UpdateSourceTrigger=LostFocus}" 
                      SelectedValuePath="ID"
                      DisplayMemberPath="FullName"
                      ItemsSource="{Binding DataContext.Teachers, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding BetAmount, StringFormat=0.00, UpdateSourceTrigger=LostFocus}" Header="Доля ставки"/>
                <DataGridTextColumn Binding="{Binding HoursAmount, UpdateSourceTrigger=LostFocus}" Header="Часы"/>
                <DataGridTemplateColumn Header="Кафедра">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DepartmentName}" VerticalAlignment="Center" Margin="5,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox SelectedValue="{Binding DepartmentID, UpdateSourceTrigger=LostFocus}" 
                                      SelectedValuePath="ID"
                                      DisplayMemberPath="Name"
                                      ItemsSource="{Binding DataContext.Departments, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridCheckBoxColumn Binding="{Binding IsExcessive, UpdateSourceTrigger=LostFocus}" Header="Дополнительная"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>




