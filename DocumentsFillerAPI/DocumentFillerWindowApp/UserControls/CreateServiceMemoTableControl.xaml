<UserControl x:Class="DocumentFillerWindowApp.UserControls.CreateServiceMemoTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentFillerWindowApp.UserControls"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <StackPanel>
        <StackPanel Margin="10, 10">
            <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                  materialDesign:HintAssist.HelperText="Выберите кафедру"
                  Margin="0, 10"
                  Width="300"
                  HorizontalAlignment="Left"
                  ItemsSource="{Binding Departments}"
                  SelectedItem="{Binding SelectedDepartment}">
            </ComboBox>
        </StackPanel>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 10">
                <Button Click="Button_Click" Margin="10,0">Выбрать основной штат</Button>
                <Label VerticalAlignment="Center" FontSize="16">Выбрано:</Label>
                <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" FontSize="16" VerticalAlignment="Center" Text="0"/>
                <!--{Binding MainStaff.Count}-->
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 10">
                <Button Click="Button_Click_1" Margin="10,0">Выбрать внутренних совместителей</Button>
                <Label VerticalAlignment="Center" FontSize="16">Выбрано: </Label>
                <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" FontSize="16" VerticalAlignment="Center" Text="0"/>
                <!--{Binding InternallStaff.Count}-->
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 10">
                <Button Click="Button_Click_2" Margin="10,0">Выбрать внешних совместителей</Button>
                <Label VerticalAlignment="Center" FontSize="16">Выбрано:</Label>
                <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" FontSize="16" VerticalAlignment="Center" Text="0"/>
                <!--{Binding ExternalStaff.Count}-->
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 10">
                <Button Click="Button_Click_4" Margin="10,0">Выбрать почасовиков</Button>
                <Label VerticalAlignment="Center" FontSize="16">Выбрано:</Label>
                <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" FontSize="16" VerticalAlignment="Center" Text="0"/>
                <!--{Binding HourlyWorkers.Count}-->
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0, 20">
            <!--<Label>Начало учебного года</Label>-->
            <TextBox materialDesign:HintAssist.Hint="Начало учебного года"
                     Style="{StaticResource MaterialDesignTextBox}"
                     x:Name="StartYearTextBox" 
                     PreviewTextInput="StartYearNumericTextBox_PreviewTextInput" 
                     Text="{Binding StartYearTextBoxText, UpdateSourceTrigger=PropertyChanged}"
                     Margin="10, 0"></TextBox>
            <!--<Label>Конец учебного года</Label>-->
            <TextBox materialDesign:HintAssist.Hint="Конец учебного года"
                     x:Name="EndYearTextBox"
                     PreviewTextInput="EndYearNumericTextBox_PreviewTextInput" 
                     Text="{Binding EndYearTextBoxText, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0, 20">
            <DatePicker materialDesign:HintAssist.Hint="Начало периода обучения" 
                        Style="{StaticResource MaterialDesignDatePicker}" 
                        SelectedDate="{Binding StudyPeriodDateStart, UpdateSourceTrigger=PropertyChanged}"
                        Margin="10, 0"></DatePicker>
            <DatePicker materialDesign:HintAssist.Hint="Конец периода обучения" 
                        Style="{StaticResource MaterialDesignDatePicker}" 
                        SelectedDate="{Binding StudyPeriodDateEnd, UpdateSourceTrigger=PropertyChanged}"></DatePicker>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10, 20">
            <TextBox materialDesign:HintAssist.Hint="Номер протокола" 
                     x:Name="ProtocolNumberTextBox" 
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     Text="{Binding ProtocolNumberText, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <DatePicker materialDesign:HintAssist.Hint="Дата и время протокола"
                        Margin="10, 0"
                        Style="{StaticResource MaterialDesignDatePicker}" 
                        SelectedDate="{Binding ProtocolDateTime, UpdateSourceTrigger=PropertyChanged}"></DatePicker>
        </StackPanel>
        <StackPanel Margin="10, 20">
            <TextBox materialDesign:HintAssist.Hint="Название файла" 
                     Style="{StaticResource MaterialDesignTextBox}"
                     Width="300"
                     HorizontalAlignment="Left"
                     Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>
        <Button Style="{StaticResource MaterialDesignFlatButton}" Click="Button_Click_3">Создать таблицу</Button>
    </StackPanel>
</UserControl>

