<UserControl x:Class="DocumentFillerWindowApp.UserControls.CreateStaffingTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentFillerWindowApp.UserControls"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                  materialDesign:HintAssist.HelperText="Выберите кафедру">
        </ComboBox>
        <StackPanel>
            <StackPanel>
                <Button Click="Button_Click">Выбрать основной штат</Button>
                <TextBlock Text="{Binding MainStaff.Count}"/>
            </StackPanel>
            <StackPanel>
                <Button Click="Button_Click_1">Выбрать внутренних совместителей</Button>
                <TextBlock Text="{Binding InternallStaff.Count}"/>
            </StackPanel>
            <StackPanel>
                <Button Click="Button_Click_2">Выбрать внешних совместителей</Button>
                <TextBlock Text="{Binding ExternalStaff.Count}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel>
            <Label>Начало учебного года</Label>
            <TextBox></TextBox>
            <Label>Конец учебного года</Label>
            <TextBlock></TextBlock>
        </StackPanel>
        <StackPanel>
            <Label>Номер протокола</Label>
            <TextBlock></TextBlock>
            <Label>Дата протокола</Label>
            <DatePicker></DatePicker>
        </StackPanel>
    </StackPanel>
</UserControl>
