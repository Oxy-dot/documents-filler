<UserControl x:Class="DocumentFillerWindowApp.UserControls.DepartmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentFillerWindowApp.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="10" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="{materialDesign:PackIcon Kind=ContentSave}" Margin="20, 0" Visibility="{Binding SaveChangesShowButton, UpdateSourceTrigger=PropertyChanged}" Click="Button_Click_1"/>
            <TextBox Grid.Column="1" Margin="0, 2"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                materialDesign:HintAssist.Hint="Поиск"
                FontSize="14"
                Padding="5, 0"/>
            <Button Grid.Column="2" Margin="10, 2" Click="Button_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Add" Margin="0, 0, 10, 0"/>
                    <TextBlock Text="Удалить"/>
                </StackPanel>
            </Button>
        </Grid>
        <DataGrid
            x:Name="MainGrid"
            AutoGenerateColumns="False"
            CanUserAddRows="True"
            CanUserDeleteRows="False"
            ItemsSource="{Binding Departments}"
            SelectionMode="Extended"
            SelectionUnit="FullRow"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            VirtualizingPanel.IsVirtualizing="True"
            Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Header="Название"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>